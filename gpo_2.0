-- ESP (Players)
local espEnabled = false
local espFolder = Instance.new("Folder", ScreenGui)
espFolder.Name = "ESP"

CreateToggle("Player ESP", function(state)
    espEnabled = state
    if not state then
        for _, v in pairs(espFolder:GetChildren()) do v:Destroy() end
    end
end)

RunService.RenderStepped:Connect(function()
    if not espEnabled then return end
    for _, v in pairs(espFolder:GetChildren()) do v:Destroy() end

    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") and player.Character:FindFirstChild("Humanoid") then
            local hrp = player.Character.HumanoidRootPart
            local hum = player.Character.Humanoid
            local pos, onScreen = workspace.CurrentCamera:WorldToViewportPoint(hrp.Position)

            if onScreen then
                local dist = math.floor((HumanoidRootPart.Position - hrp.Position).Magnitude)
                local healthPct = math.floor((hum.Health / hum.MaxHealth) * 100)

                local label = Instance.new("TextLabel")
                label.Size = UDim2.new(0, 200, 0, 30)
                label.Position = UDim2.new(0, pos.X - 100, 0, pos.Y - 40)
                label.BackgroundTransparency = 1
                label.Text = player.Name .. " [" .. dist .. "m] " .. healthPct .. "%"
                label.TextColor3 = Color3.fromRGB(180, 140, 255)
                label.TextSize = 13
                label.Font = Enum.Font.GothamBold
                label.TextStrokeTransparency = 0.5
                label.Parent = espFolder
            end
        end
    end
end)

